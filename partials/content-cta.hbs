{{{html}}}

<section class="single-cta">
    {{#has visibility="paid"}}
        <h2 class="single-cta-title">Este artigo é apenas para membros</h2>
    {{/has}}
    {{#has visibility="members"}}
        <h2 class="single-cta-title">Este artigo é apenas para subscritores</h2>
    {{/has}}
    {{#has visibility="filter"}}
        <h2 class="single-cta-title">Este artigo é apenas para subcritores do {{tiers}}</h2>
    {{/has}}
    {{#if @member}}
        <button class="button single-cta-button" data-portal="account/plans">Subir nível</button>
    {{else}}
        <button class="button single-cta-button" data-portal="signup">Subscrever</button>
        <br>
        <button class="button-text single-cta-footer" data-portal="signin">Já tem conta? Aceda</button>
    {{/if}}
</section>