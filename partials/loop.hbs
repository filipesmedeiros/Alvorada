<article class="feed {{visibility}} {{post_class}}">

    <div class="feed-calendar">
        <span class="feed-calendar-day">
            {{date published_at format="DD"}}
        </span>
        <span class="feed-calendar-month">
            {{date published_at format="MMM"}}
        </span>
        <span class="feed-calendar-year">
            '{{date published_at format="YY"}}
        </span>
    </div>

    <h2 class="feed-title">{{title}}</h2>

    <div class="feed-right">
        {{> "icons/star"}}
        <div class="feed-length">
            {{reading_time}}
        </div>
    </div>

    {{> "icons/chevron-right"}}

    <a class="u-permalink" href="{{url}}" aria-label="{{title}}"></a>

</article>
